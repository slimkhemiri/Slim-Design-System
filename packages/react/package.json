{
  "name": "@slimkhemiri/react-design-system",
  "version": "0.1.3",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "node ./scripts/clean.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "storybook": "pnpm --filter @slim-ds/tokens build && pnpm --filter @slimkhemiri/web-components build && storybook dev -p 6006",
    "build-storybook": "pnpm --filter @slim-ds/tokens build && pnpm --filter @slimkhemiri/web-components build && storybook build",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@slimkhemiri/web-components": "workspace:*",
    "@stencil/react-output-target": "^0.8.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "^10.2.7",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-onboarding": "^10.2.7",
    "@storybook/addon-vitest": "^10.2.7",
    "@storybook/react-vite": "^10.2.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "chromatic": "^15.0.0",
    "playwright": "^1.58.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^10.2.7",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
