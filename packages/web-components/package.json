{
  "name": "@slimkhemiri/web-components",
  "version": "0.1.4",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js"
    },
    "./dist/components/*": "./dist/components/*",
    "./dist/*": "./dist/*",
    "./loader/*": "./loader/*"
  },
  "collection": "dist/collection/collection-manifest.json",
  "unpkg": "dist/slim/slim.esm.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "pnpm --filter @slimkhemiri/tokens build && node ./scripts/sync-tokens.mjs && stencil build",
    "dev": "pnpm --filter @slimkhemiri/tokens build && node ./scripts/sync-tokens.mjs && stencil build --watch --serve",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "stencil test --spec --e2e",
    "clean": "node ./scripts/clean.mjs",
    "prepack": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@stencil/core": "^4.20.0",
    "@stencil/react-output-target": "^0.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.4"
  }
}
