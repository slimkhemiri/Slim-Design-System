{
  "name": "@slim-ds/web-components",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js"
    },
    "./dist/*": "./dist/*",
    "./loader/*": "./loader/*"
  },
  "collection": "dist/collection/collection-manifest.json",
  "unpkg": "dist/slim/slim.esm.js",
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist/", "loader/"],
  "scripts": {
    "build": "npm --prefix ../tokens run build && stencil build",
    "dev": "npm --prefix ../tokens run build && stencil build --watch --serve",
    "test": "stencil test --spec --e2e",
    "clean": "node ./scripts/clean.mjs"
  },
  "dependencies": {},
  "devDependencies": {
    "@stencil/core": "^4.20.0",
    "@stencil/react-output-target": "^0.8.0",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.4"
  }
}

